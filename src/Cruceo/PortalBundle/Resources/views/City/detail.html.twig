{% block main %}

<div class="detalle_ciudad mfcl well nobg">
    <div class="cab vpad">
        <h4>{{ entity.getNombre }} <img class="img-circle" src="/cities/barcelona/highligth.png" alt="{{ entity.getPais }}" title="{{ entity.getPais }}" /></h4>
    </div>
     {% if entity.getLugaresTuristicos|length > 0 %}
        <div id="tourist-places-city">
            <p class="lead t-cent">Lugares Tur√≠sticos</p>
            {% for place in entity.getLugaresTuristicos %}
