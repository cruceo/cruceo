{% extends "CruceoPortalBundle::layout.html.twig" %}

{% block js %}
    {{ parent() }}
    <script src="{{ asset('bundles/cruceoportal/js/search.js') }}"></script>
{% endblock %}

{% block content %}

    <div id="result-data">
        {% include "CruceoPortalBundle:Partials:results.html.twig" with {'results': results} %}
    </div>

    <div id="filters">
        <div id="filter-category-ships">
            <p>Categor√≠as Barcos</p>
            <ul>
                {% for category in categories %}
                    <li attr-data="{{ category.getId }}">{{ category.getNombre }}</li>
                {% endfor %}
            </ul>
        </div>
        <div id="filter-cabin">
            <p>Camarotes</p>
            <ul>
                {% for cabin in cabins %}
                    <li attr-data="{{ cabin.getId }}">{{ cabin.getNombre }}</li>
                {% endfor %}
            </ul>
        </div>
        <div id="filter-equipaments">
            <p>Equipamientos</p>
            <ul>
                {% for equipment in equipments %}
                    <li attr-data="{{ equipment.getId }}">{{ equipment.getNombre }}</li>
                {% endfor %}
            </ul>
        </div>
        <div id="filter-shipping-companies">
            <p>Navieras</p>
            <ul>
                {% for company in companies %}
                    <li attr-data="{{ company.getId }}">{{ company.getNombre }}</li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div id="searching">
        <form id="f-filters" name="f-filters" method="post" action="#">
            <input type="hidden" name="f-str" id="f-str" value="{{ data.str }}"/>
            <input type="hidden" name="f-start" id="f-start" value="{{ data.start }}"/>
            <input type="hidden" name="f-zone" id="f-zone" value="{{ data.zone }}"/>
            <input type="hidden" name="f-zone" id="f-duration" value="{{ data.duration }}"/>
            <input type="hidden" name="f-category" id="f-category" value=""/>
            <input type="hidden" name="f-cabin" id="f-cabin" value=""/>
            <input type="hidden" name="f-equipament" id="f-equipament" value=""/>
            <input type="hidden" name="f-shipping" id="f-shipping" value=""/>
        </form>
    </div>

{% endblock %}