{% extends "CruceoUserBundle::layoutAdmin.html.twig" %}

{% form_theme form 'CruceoUserBundle:Form:collection_tourist_places.html.twig' %}

{% block content %}

<h1 class="title ciudades">Editar Ciudad</h1>

<form action="{{ path('admin_ciudades_edit', { 'id': entity.id }) }}" method="post" {{ form_enctype(form) }} novalidate="novalidate">
    {{ form_row(form._token) }}
    <div class="grid_12">
        <fieldset class="form">
            <legend>Datos</legend>

            <div class="mb1 mt1">
                {{ form_label(form.nombre, null, { 'attr': { 'class' : 'fl'} }) }}
                {{ form_widget(form.nombre, { 'attr': { 'class' : 'w250'} }) }}
                {{ form_errors(form.nombre) }}
            </div>

            <div class="mb1">
                {{ form_label(form.pais, null, { 'attr': { 'class' : 'fl'} }) }}
                {{ form_widget(form.pais, { 'attr': { 'class' : 'w250'} }) }}
                {{ form_errors(form.pais) }}
            </div>
        </fieldset>
    </div>

    <div class="grid_12 mt1">
        <fieldset class="form">
            <legend>Lugares Tur√≠sticos</legend>

            <div class="mt1">
                {{ form_widget(form.lugares_turisticos) }}
                {{ form_errors(form.lugares_turisticos) }}
            </div>
        </fieldset>
    </div>

    <div class="grid_12 cbutton">
        <div class="grid_6">
            <button type="button" class="delete" id="bDeleteEntity">
                <img alt="Eliminar Ciudad" src="{{ asset('/bundles/cruceouser/css/images/remove.png') }}"/>Eliminar
            </button>
        </div>
        <div class="grid_6 toright">
            <button type="submit" class="save">
                <img alt="Editar Ciudad" src="{{ asset('/bundles/cruceouser/css/images/save.png') }}"/>Editar
            </button>
        </div>
    </div>
</form>
<form action="{{ path('admin_ciudades_delete', { 'id': entity.id }) }}" method="post" id="deleteEntity">
    {{ form_widget(delete_form) }}
</form>
{% endblock %}