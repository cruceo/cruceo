<h1 class="title {{ css }}">{{ title }}</h1>

{% if entities|length %}
<table class="bordered">
    <thead>
        <tr>
        	<th>#</th>
        	{% for header in headers %}
            <th>{{ header }}</th>
            {% endfor %}
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path(url, { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            {% for field in fields %}
            <td>{{ attribute(entity, field) }}</td>
            {% endfor %}
            <td><a href="{{ path(url, { 'id': entity.id }) }}"><img src="{{ asset('bundles/cruceouser/css/images/edit.png') }}" alt="edit" /></a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
<div class="info">No existen entidades</div>
{% endif %}