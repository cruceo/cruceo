{% form_theme form 'CruceoUserBundle:Form:collection_cruceros.html.twig' %}

<form action="{{ url_form }}" method="post" {{ form_enctype(form) }}>
    {{ form_row(form._token) }}
    <div class="mb1">
        {{ form_errors(form) }}
    </div>

    <div class="grid_6">
        <fieldset class="form">
            <legend>Generales</legend>

            <div class="mb1 mt1">
                {{ form_label(form.nombre, null, { 'attr': { 'class' : 'fl'} }) }}
                {{ form_widget(form.nombre, { 'attr': { 'class' : 'w250'} }) }}
                {{ form_errors(form.nombre) }}
            </div>

            <div class="mb1">
                {{ form_label(form.naviera, null, { 'attr': { 'class' : 'fl'} }) }}
                {{ form_widget(form.naviera, { 'attr': { 'class' : 'w250'} }) }}
                {{ form_errors(form.naviera) }}
            </div>

            <div class="mb1">
                {{ form_label(form.barco, null, { 'attr': { 'class' : 'fl'} }) }}
                {{ form_widget(form.barco, { 'attr': { 'class' : 'w250'} }) }}
                {{ form_errors(form.barco) }}
            </div>

            <div class="mb1">
                {{ form_label(form.fechaSalida, 'Fecha de salida', { 'attr': { 'class' : 'fl'} }) }}
                {{ form_widget(form.fechaSalida, { 'attr': { 'class' : 'dp'} }) }}
                {{ form_errors(form.fechaSalida) }}
            </div>

            <div class="mb1">
                {{ form_label(form.duracion, 'Duraci贸n', { 'attr': { 'class' : 'fl'} }) }}
                {{ form_widget(form.duracion, { 'attr': { 'class' : 'w250'} }) }}
                {{ form_errors(form.duracion) }}
            </div>

            <div class="mb1">
                {{ form_label(form.equipamiento) }}
                {{ form_widget(form.equipamiento) }}
                {{ form_errors(form.equipamiento) }}
            </div>

            <div class="mb1">
                {{ form_label(form.detalles) }}
                {{ form_widget(form.detalles) }}
                {{ form_errors(form.detalles) }}
            </div>
        </fieldset>

        <fieldset class="form mt2">
            <legend>Localizaci贸n</legend>

            <div class="mb1 mt1">
                {{ form_label(form.itinerario, null, { 'attr': { 'class' : 'fl'} }) }}
                {{ form_widget(form.itinerario) }}
                {{ form_errors(form.itinerario) }}
            </div>

            {% if type == 'edit' %}
            <div id="editImgItenerarioView">
                <label>Imagen Itinerario</label>
                <div class="viewImage">
                    <img src="/{{ entity.getUploadDir }}/{{ entity.getImgItinerario }}" />
			    </div>
			    <div class="toolImage mb1">
			        <img alt="eliminar imagen" id="refreshImage" data-remove="{{ entity.getImgItinerario }}" src="{{ asset('/bundles/cruceouser/css/images/refresh.png') }}"/>
			    </div>
            </div>
            {% endif %}

            <div class="mb1"{% if type == 'edit' %} style="display: none;" id="editImgItenerario"{% endif %}>
                {{ form_label(form.imgItinerarioFile, 'Imagen Itinerario', { 'attr': { 'class': 'fl'} }) }}
                {{ form_widget(form.imgItinerarioFile) }}
                {{ form_errors(form.imgItinerarioFile) }}
            </div>

            <div class="mb1">
                {{ form_label(form.zona, null, { 'attr': { 'class' : 'fl'} }) }}
                {{ form_widget(form.zona) }}
                {{ form_errors(form.zona) }}
            </div>

            <div class="mb1">
                {{ form_label(form.ciudades, null, { 'attr': { 'class' : 'collection'} }) }}
                {{ form_widget(form.ciudades) }}
                {{ form_errors(form.ciudades) }}
            </div>
        </fieldset>
    </div>
    <div class="grid_6">
        <fieldset class="form">
            <legend>Econ贸micos</legend>

            <div class="mb1 mt1">
                {{ form_label(form.incluidoPrecio, 'Incluido en Precio') }}
                {{ form_widget(form.incluidoPrecio) }}
                {{ form_errors(form.incluidoPrecio) }}
            </div>

            <div class="mb1">
                {{ form_label(form.noIncluidoPrecio, 'No Incluido en Precio') }}
                {{ form_widget(form.noIncluidoPrecio) }}
                {{ form_errors(form.noIncluidoPrecio) }}
            </div>

            <div class="mb1">
                {{ form_label(form.promocion, 'Promoci贸n') }}
                {{ form_widget(form.promocion) }}
                {{ form_errors(form.promocion) }}
            </div>

            <div class="mb1">
                {{ form_label(form.precios, null, { 'attr': { 'class' : 'collection'} }) }}
                {{ form_widget(form.precios) }}
                {{ form_errors(form.precios) }}
            </div>
        </fieldset>
    </div>

{% if type == 'new' %}
    <div class="grid_12 tr cbutton">
        <button type="submit" class="save">
            <img alt="guardar" src="{{ asset('/bundles/cruceouser/css/images/save.png') }}"/>Guardar
        </button>
    </div>
</form>
{% elseif type == 'edit'  %}
    <div class="grid_12 cbutton">
        <div class="grid_6">
            <button type="button" class="delete" id="bDeleteEntity">
                <img alt="Eliminar crucero" src="{{ asset('/bundles/cruceouser/css/images/remove.png') }}"/>Eliminar
            </button>
        </div>
        <div class="grid_6 toright">
            <button type="submit" class="save">
                <img alt="Editar crucero" src="{{ asset('/bundles/cruceouser/css/images/save.png') }}"/>Editar
            </button>
        </div>
    </div>
</form>
<form action="{{ path('admin_cruceros_delete', { 'id': entity.id }) }}" method="post" id="deleteEntity">
    {{ form_widget(del_form) }}
</form>
{% endif %}